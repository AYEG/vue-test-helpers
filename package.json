{
  "name": "@laura-wert/vue-test-helpers",
  "version": "1.0.3",
  "description": "",
  "productName": "",
  "license": "MIT",
  "author": " ",
  "main": "dist/",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn lint && rimraf ./dist && webpack --config ./webpack.config.js",
    "release": "yarn git-clean-status &&  yarn build && yarn publish",
    "lint": "eslint --ext .js,.vue src test",
    "test": "jest",
    "test-ci": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage jest --coverage && cat ./coverage/lcov.info | codacy-coverage"
  },
  "dependencies": {
    "quasar-framework": "^0.16.0"
  },
  "devDependencies": {
    "@laura-wert/git-clean-status": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "codacy-coverage": "^3.0.0",
    "css-loader": "^0.28.11",
    "eslint": "4.15.0",
    "eslint-config-standard": "10.2.1",
    "eslint-friendly-formatter": "3.0.0",
    "eslint-loader": "1.7.1",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "5.2.0",
    "eslint-plugin-promise": "3.4.0",
    "eslint-plugin-standard": "3.0.1",
    "eslint-plugin-vue": "4.5.0",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.4",
    "rimraf": "^2.6.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^2.1.1",
    "vue-loader": "^15.2.4",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.3"
  },
  "peerDependencies": {
    "@vue/test-utils": "^1.0.0-beta.12"
  },
  "files": [
    "package.json",
    "dist/"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  }
}
